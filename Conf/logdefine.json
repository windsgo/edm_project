{
    "default_logger_level": "debug",
    "global_thread_pool": {
        "size": 65535,
        "thread_count": 1
    },
    "loggers": [
        {
            "name": "motion",
            "async_mode": true,
            "async_policy": "overrun_oldest",
            "level": "trace",
            "flush_level": "info",
            "sinks": [
                {
                    "type": "file",
                    "level": "info",
                    "filename": "motion.log",
                    "multi_thread": false,
                    "max_size": 10485760,
                    "max_files": 15,
                    "rotate_on_open": true
                },
                {
                    "type": "stdout",
                    "level": "info",
                    "multi_thread": false
                }
            ]
        },
        {
            "name": "root",
            "async_mode": false,
            "level": "trace",
            "flush_level": "info",
            "sinks": [
                {
                    "type": "file",
                    "level": "info",
                    "filename": "root.log",
                    "multi_thread": true,
                    "max_size": 10485760,
                    "max_files": 5,
                    "rotate_on_open": false
                },
                {
                    "type": "stdout",
                    "level": "trace",
                    "multi_thread": true
                }
            ]
        },
        {
            "name": "interp",
            "async_mode": false,
            "level": "trace",
            "flush_level": "trace",
            "sinks": [
                {
                    "type": "file",
                    "level": "info",
                    "filename": "interp.log",
                    "multi_thread": false,
                    "max_size": 10485760,
                    "max_files": 5,
                    "rotate_on_open": false
                },
                {
                    "type": "stdout",
                    "level": "trace",
                    "multi_thread": false
                }
            ]
        }
    ]
}